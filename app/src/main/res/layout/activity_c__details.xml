<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.C_DetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        >
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="@color/e3e3e3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:text="___________________________________________________"
        />
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/sp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_tou"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_toRightOf="@id/img_tou"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banxiaomi"
            android:id="@+id/tv_banxiaomis"
            />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@id/tv_banxiaomis"
                android:layout_toRightOf="@id/img_tou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1022人关注"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@id/img_tou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活人版旅行指南"
                android:textSize="@dimen/sp_15"
                />
            <CheckBox
                android:button="@null"
                android:id="@+id/checkbox"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/select_checkbox"
                />
            <TextView
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_below="@id/checkbox"
                />
</RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_margin="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/icon_me_kaquan_banmi1" />

        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/tv_banxiaomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banxiaomi"
            android:textColor="#BABABA"
            android:layout_toRightOf="@id/img"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_desc"
            android:layout_margin="@dimen/dp_6"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/tv_banxiaomi"

            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好哇~送给你一张拍摄于纽约的美照，带着美好心情，努力生活！"
            />

        <ImageView
            android:layout_margin="@dimen/dp_6"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/img_fengjing"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/tv_desc"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_time"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/img_fengjing"
            android:layout_margin="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12月前"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_below="@id/tv_time"
            android:layout_toRightOf="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__________________________________"
            />

    </RelativeLayout>

</LinearLayout>