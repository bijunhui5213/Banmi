<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/lin"
    tools:context=".fragment.CFragment">

    <RelativeLayout
        android:layout_margin="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/icon_me_kaquan_banmi1" />

        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/tv_banxiaomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banxiaomi"
            android:textColor="#BABABA"
            android:layout_toRightOf="@id/img"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_desc"
            android:layout_margin="@dimen/dp_6"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/tv_banxiaomi"

            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好哇~送给你一张拍摄于纽约的美照，带着美好心情，努力生活！"
            />

        <ImageView
            android:layout_margin="@dimen/dp_6"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/img_fengjing"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/tv_desc"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_time"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/img_fengjing"
            android:layout_margin="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12月前"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_below="@id/tv_time"
            android:layout_toRightOf="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__________________________________"
            />

    </RelativeLayout>

</LinearLayout>